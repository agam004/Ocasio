<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <h1 class="custom-heading">Occasio â€“ Unlock the Power of Events</h1> 

    <div class="card shadow-lg form-container">
        <form action="/signup" method="POST">
            <h3 class="text-center mb-5">Signup</h3>
        
            <div class="form-group">
                <label for="name" class="form-label">Full Name :</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
        
            <div class="form-group">
                <label for="email" class="form-label">Email :</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
        
            <div class="form-group">
                <label for="password" class="form-label">Password :</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
        
            <div class="form-group">
                <label for="role" class="form-label">Role :</label>
                <select class="form-control" id="role" name="role" required>
                    <option value="customer">Customer</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
        
            <div class="form-group" id="admin-pin-field" style="display: none;">
                <label for="admin-pin" class="form-label">Admin PIN :</label>
                <input type="password" class="form-control" id="admin-pin" name="adminPin">
                <small id="admin-pin-help" class="form-text text-muted">Enter the admin PIN if you're registering as an admin.</small>
            </div>
        
            <button type="submit" class="btn btn-primary w-100">Signup</button>
        
            <div class="text-center mt-2">
                <span>Already have an account? </span>
                <a href="/login" class="text-decoration-none">Login</a>
            </div>
        </form>
        
        <script>
            // Get the role select and the admin PIN field
            const roleSelect = document.getElementById('role');
            const adminPinField = document.getElementById('admin-pin-field');
            
            // Add an event listener to the role select dropdown
            roleSelect.addEventListener('change', function() {
                // Show or hide the admin pin field based on the selected role
                if (roleSelect.value === 'admin') {
                    adminPinField.style.display = 'block';
                } else {
                    adminPinField.style.display = 'none';
                }
            });
        </script>
    </div>        
</body>
</html>
