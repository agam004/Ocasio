<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Occasio - New Account</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="shortcut icon" href="https://res.cloudinary.com/dehhnip92/image/upload/v1740858902/Occasio_o3cgzl.png`" type="image/x-icon">
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- Navbar Full Width -->
    <%- include('auth-nav') %>

    <!-- Main Content (Centered Form) -->
    <div class="flex-grow-1 d-flex justify-content-center align-items-center">
        <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
            <form action="/signup" method="POST">
                <h3 class="text-center mb-4">Signup</h3>
            
                <div class="form-group">
                    <label for="name" class="form-label">Full Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
            
                <div class="form-group">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
            
                <div class="form-group">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
            
                <div class="form-group">
                    <label for="role" class="form-label">Role:</label>
                    <select class="form-control" id="role" name="role" required>
                        <option value="customer">Customer</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
            
                <div class="form-group" id="admin-pin-field" style="display: none;">
                    <label for="admin-pin" class="form-label">Admin PIN:</label>
                    <input type="password" class="form-control" id="admin-pin" name="adminPin">
                    <small class="form-text text-muted">Enter the admin PIN if you're registering as an admin.</small>
                </div>
            
                <button type="submit" class="btn btn-primary w-100 mt-3">Signup</button>
            
                <div class="text-center mt-3">
                    <span>Already have an account? </span>
                    <a href="/login" class="text-decoration-none">Login</a>
                </div>
            </form>
        </div>        
    </div>

    <!-- Footer Full Width -->
    <%- include('footer.ejs') %>

    <script>
        const roleSelect = document.getElementById('role');
        const adminPinField = document.getElementById('admin-pin-field');
        
        roleSelect.addEventListener('change', function() {
            adminPinField.style.display = roleSelect.value === 'admin' ? 'block' : 'none';
        });
    </script>

</body>
</html>
