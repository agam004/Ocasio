<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Occasio - Past Events</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('admin-nav.ejs') %>
  <div class="container mt-5">
    <h2>Past Events</h2>
    <% if (pastEvents.length === 0) { %>
      <div class="alert alert-info">No past events found.</div>
    <% } else { %>
      <div class="row">
        <% pastEvents.forEach(event => { %>
          <div class="col-md-4">
            <div class="card mb-4">
              <img src="<%= event.imageUrl %>" class="card-img-top" alt="<%= event.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= event.title %></h5>
                <p class="card-text"><%= new Date(event.date).toLocaleDateString() %></p>
                <!-- Optionally, admin can perform some management tasks -->
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
  <%- include('footer.ejs') %>
</body>
</html>
