<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Occasio - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>

    <% if (user) { %>
        <% if (user.role === 'admin') { %>
            <%- include('admin-nav.ejs') %>
        <% } else { %>
            <%- include('logged-in-nav.ejs') %>
        <% } %>
    <% } else { %>
        <%- include('navbar.ejs') %>
    <% } %>
    

    <!-- Hero Section -->
    <header class="hero bg-dark text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Find & Manage Your Events Easily</h1>
            <p class="lead">Join Occasio and explore amazing events happening near you.</p>
            <a href="/signup" class="btn btn-primary btn-lg">Get Started</a>
        </div>
    </header>

    <!-- Featured Events Section -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Upcoming Events</h2>
        <div class="row">
            <% if (events && events.length === 0) { %> <!-- Check if events is an array and has no elements -->
                <div class="col">
                    <div class="alert alert-info" role="alert">
                        No events found.
                    </div>
                </div>
            <% } %>
            
            <% events.forEach(event => { %> <!-- Loop through the events array -->
                <div class="col-md-4">
                    <div class="card">
                        <img src="<%= event.imageUrl %>" class="card-img-top" alt="<%= event.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= event.title %></h5>
                            <p class="card-text"><%= event.description %></p>
                            <!-- Link to the specific event page -->
                            <a href="/event/<%= event._id %>" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
    
    <!-- Footer -->
    <%- include('footer.ejs') %>

</body>
</html>
