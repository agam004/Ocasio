<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% if (user && user.role === 'admin') { %>
        <title>Occasio - Admin Panel</title>
    <% } else { %>
        <title>Occasio - Home</title>
    <% } %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="../images/Occasio.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>

    <% if (user) { %>
        <% if (user.role === 'admin') { %>
            <%- include('admin-nav.ejs') %>
            <%- include('admin-header.ejs') %>
        <% } else { %>
            <%- include('logged-in-nav.ejs') %>
            <%- include('logged-in-header.ejs') %>
        <% } %>
    <% } else { %>
        <%- include('navbar.ejs') %>
    <% } %>
    

    

    <!-- Featured Events Section -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Upcoming Events</h2>
        <div class="row">
            <% if (events && events.length === 0) { %> <!-- Check if events is an array and has no elements -->
                <div class="col">
                    <div class="alert alert-info" role="alert">
                        No events found.
                    </div>
                </div>
            <% } %>
            
            <% events.forEach(event => { %> <!-- Loop through the events array -->
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="<%= event.imageUrl %>" class="card-img-top" alt="<%= event.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= event.title %></h5>
                            <!-- Link to the specific event page -->
                            <a href="/event/<%= event._id %>" class="btn btn-outline-primary">View Details</a>
                            <% if (user) { %>
                                <% if (user.role === 'admin') { %>
                                    <a href="/admin/manage-event/<%= event._id %>" class="btn btn-outline-primary">Manage Event</a>
                                <% } %>
                            <% } %>
                            
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
    
    <!-- Footer -->
    <%- include('footer.ejs') %>

</body>
</html>
