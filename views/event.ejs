<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= event.title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css"> <!-- Custom Styles -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Lora:wght@400;700&display=swap" rel="stylesheet">

    <%- include('navbar.ejs') %>
    <!-- Custom Styles -->
    <style>
        /* Full page background image section */
        .event-section {
            background-size: cover;
            background-position: center;
            height: 100vh;
        }

        /* Centering the card container */
        .event-card-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        /* Card styling */
        .event-card {
            background-color: rgba(235, 235, 248, 0.603);
            color: #000000;
            max-width: 800px;
            width: 100%;
            padding: 40px;
        }

        /* Centering text in the card */
        .event-card .card-body {
            text-align: center;
        }

        /* Text color */
        .event-card .card-body p {
            color: #000000;
        }

        /* Primary button styling */
        .btn-primary {
            background-color: #007bff;
            border: none;
        }
    </style>
</head>
<body class="bg-dark text-light">

    <!-- Event Details Section with Background Image -->
    <section class="container-fluid event-section" style="background-image: url('<%= event.imageUrl %>');">
        <div class="event-card-container">
            <div class="card event-card shadow-lg border-0 rounded">
                <div class="card-body">
                    <h1 class="text-primary mb-4"><%= event.title %></h1>
                    <p class="text-dark mb-4"><strong>Description:</strong> <%= event.description %></p>
                    <p class="text-dark mb-4"><strong>Date:</strong> <%= event.date.toLocaleDateString() %></p>
                    <a href="/" class="btn btn-primary btn-lg">Back to Home</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('footer.ejs') %>

</body>
</html>
